{
  "name": "makerdao-governance-subgraph",
  "license": "UNLICENSED",
  "scripts": {
    "build": "graph build",
    "codegen": "graph codegen",
    "create-local": "graph create --node http://localhost:8020/ protofire/makerdao-governance-v1_5",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ protofire/makerdao-governance-v1_5",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 protofire/makerdao-governance-v1_5",
    "remove-local": "graph remove --node http://localhost:8020/ protofire/makerdao-governance-v1_5"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.16.2",
    "@graphprotocol/graph-ts": "0.16.0"
  },
  "devDependencies": {
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,json,graphql,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
